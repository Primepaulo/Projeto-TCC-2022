@model Projeto_TCC_2022.Models.RegisterViewModel


<div class="d-flex justify-content-center align-content-center flex-wrap" style="height: 70vh">
    <section style="width: 400px">
        <h2 class="mb-4 text-center Montserrat">Registre-se</h2>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="mb-3">
                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control inputArea" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control inputArea" })
            </div>
            <div class="mb-4">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control inputArea" })
            </div>

            <div class="d-grid gap-2 col-12 pt-2">
                <input type="submit" class="btn btn-primary inputArea Montserrat" value="Registrar" />
            </div>
        }

        <div class="position-relative mt-4 text-center">
            <a class="stretched-link" href="@Url.Action("Login", "Account")"></a>
            <span class="bigHeader">Já utiliza o sistema? Clique aqui para Logar</span>
        </div>

    </section>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
