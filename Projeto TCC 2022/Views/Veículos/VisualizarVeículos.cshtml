<div class="card">
    <div class="card-header border-0">
        <h3 class="smallHeader">Veículos</h3>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th scope="col">Placa</th>
                    <th scope="col">Cor</th>
                    <th scope="col">Modelo</th>
                    <th scope="col">Motorização</th>
                    <th scope="col">Marca</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Lista)
                {
                    <tr class="text-center">
                        <td>@item.Placa</td>
                        <td>@item.Cor</td>
                        <td>@item.Modelo</td>
                        <td>@item.Motorização</td>
                        <td>@item.Marca</td>
                        <td>
                            <a class="edit btn btn-primary" data-id="@item.Placa" href="#">Editar</a>
                            <a class="excluir btn btn-danger" data-id="@item.Placa" href="#">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-center mt-4 mb-3">
            <a class="btn btn-primary btn-lg" href="#" id="add">Adicionar Veículos</a>
        </div>
    </div>
</div>

<div class="modal fade" id="Modal" tabindex="-1">
</div>

@section scripts {

    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {

            $('#add').click(function () {

                $.ajax
                ({
                    type: 'GET',
                    url: '@Url.Action("CadastroVeículos", "Veículos")',
                    dataType: 'html',
                    cache: false,
                    success: function (data) {
                        $('#Modal').html(data);
                        $('#Modal').modal("show");
                    },
                    error: function () {
                        console.log("Erro");
                    },
                    complete: function () {
                        $("form").each(function () { $.data($(this)[0], 'validator', false); });
                        $.validator.unobtrusive.parse("form");
                    }
                });

            });

            $('.edit').click(function () {

                var a = $(this).data("id");

                $.ajax
                ({
                    type: 'GET',
                    url: '@Url.Action("EditarVeículo", "Veículos")/?Placa=' + a,
                    dataType: 'html',
                    cache: false,
                    success: function (data) {
                        $('#Modal').html(data);
                        $('#Modal').modal("show");
                    },
                    error: function () {
                        console.log("Erro");
                    },
                    complete: function () {
                        $("form").each(function () { $.data($(this)[0], 'validator', false); });
                        $.validator.unobtrusive.parse("form");
                    }
                });
            });

            $('.excluir').click(function () {

                var a = $(this).data("id");

                $.ajax
                ({
                    type: 'GET',
                    url: '@Url.Action("DeletarVeículo", "Veículos")/?Placa=' + a,
                    dataType: 'html',
                    cache: false,
                    success: function (data) {
                        $('#Modal').html(data);
                        $('#Modal').modal("show");
                    },
                    error: function () {
                        console.log("Erro");
                    }
                });
            });

        });
    </script>
}

