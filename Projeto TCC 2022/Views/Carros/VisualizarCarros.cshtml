

<p><a class="btn btn-info btn-lg mt-4" href="/Carros/CadastroCarros">Adicionar &raquo;</a></p>
<br />

<table class="table table-bordered table-hover table-responsive">
    <tr>
        <th>Placa</th>
        <th>Modelo</th>
        <th>Cor</th>
        <th>Motorização</th>
        <th>Marca</th>
    </tr>

    @foreach (var item in ViewBag.Lista)
    {
        <tr>
            <td>@item.Placa</td>
            <td>@item.Modelo</td>
            <td>@item.Cor</td>
            <td>@Convert.ToString(item.Motorização).Replace(",", ".")</td>
            <td>@item.Marca</td>
            <td>
                @Html.ActionLink("Editar", "EditarCarro", new { Placa = item.Placa }) |
                @Html.ActionLink("Excluir", "DeletarCarro", new { Placa = item.Placa })
            </td>
        </tr>

    }
</table>
