

<p><a class="btn btn-info btn-lg mt-4" href="/Carros/CadastroCarros">Adicionar Carro</a></p>
<br />

<table class="table table-bordered table-hover table-responsive">
    <tr>
        <th>Placa</th>
        <th>Modelo</th>
        <th>Cor</th>
        <th>Motorização</th>
        <th>Marca</th>
    </tr>

    @foreach (var item in ViewBag.Lista)
    {
        <tr>
            <td>@item.Placa</td>
            <td>@item.Modelo</td>
            <td>@item.Cor</td>
            <td>@item.Motorização.Replace(",", ".")</td>
            <td>@item.Marca</td>
            <td>
                @Html.ActionLink("Editar", "EditarServiço", new { Id = item.Id }) |
                @Html.ActionLink("Excluir", "DeletarServiço", new { Id = item.Id })
            </td>
        </tr>

    }
</table>
