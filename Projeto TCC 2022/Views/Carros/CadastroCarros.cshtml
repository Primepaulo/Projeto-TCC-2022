@model Projeto_TCC_2022.Models.Carro

@{
    ViewBag.Title = "CadastroCarros";
}

<h2>CadastroCarros</h2>

@using (Html.BeginForm("CadastrarCarros", "Carros", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Carro</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Placa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input data-val="true" data-val-required="Campo Requerido" type="text" class="form-control" name="Placa" id="Placa" autocomplete="off" data-val-regex="Placa Inválida" data-val-regex-pattern="^[a-zA-Z]{3}[0-9][A-Za-z0-9][0-9]{2}$" onkeyup="this.value = this.value.toUpperCase();"/>
                @Html.ValidationMessageFor(model => model.Placa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cor, new { htmlAttributes = new { @class = "form-control", name = "Cor", @id = "Cor" } })
                @Html.ValidationMessageFor(model => model.Cor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Modelo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Modelo, new { htmlAttributes = new { @class = "form-control", name = "Modelo", @id = "Modelo" } })
                @Html.ValidationMessageFor(model => model.Modelo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Motorização, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Motorização, new { htmlAttributes = new { @class = "form-control", name = "Motorização", @id = "Motorização" } })
                @Html.ValidationMessageFor(model => model.Motorização, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Marca, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Marca, new { htmlAttributes = new { @class = "form-control", name = "Marca", @id = "Marca"} })
                @Html.ValidationMessageFor(model => model.Marca, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <div>
        @Html.ActionLink("Retornar", "VisualizarCarros", "Carros", null, new { @class = "" })
    </div>
</div>

@section scripts{

    <script>
        
    </script>
    @Scripts.Render("~/bundles/jqueryval")
}