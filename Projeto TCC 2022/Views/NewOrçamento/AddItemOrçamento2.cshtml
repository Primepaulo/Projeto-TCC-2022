            $("#DivSoma").empty();

            $.ajax
            ({
                type: 'GET',
                url: "/NewOrçamento/LimparOrçamento2",
                dataType: 'html',
                cache: false,
                error: function () {
                    console.log("Erro");
                }
            });
        }

        function Submit() {
