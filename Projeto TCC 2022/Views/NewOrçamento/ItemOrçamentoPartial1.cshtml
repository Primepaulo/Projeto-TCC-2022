@model Projeto_TCC_2022.Models.Classes.ServiçoCategoria

@{ 
    decimal PreçoMin = 0;
    decimal PreçoMax = 0;
}

<div class="row itemOrçamento">
    <div class="col">
        <p>@Model.Categoria.Nome</p>
    </div>
    <div class="col">
        <p>@Model.Serviço.Nome</p>
        <input class="d-none serviçosId" value="@Model.Serviço.Id" />
    </div>
    <div class="col">
        @if (Model.Serviço.PreçoMin != null)
        {
            PreçoMin = (decimal)Model.Serviço.PreçoMin;
            <p class="preço">@PreçoMin.ToString("F")</p>
        }
        @if (Model.Serviço.PreçoMax != null)
        {
            PreçoMax = (decimal)Model.Serviço.PreçoMax;
            <p class="preço">@PreçoMax.ToString("F")</p>
        }
    </div>

    @if (ViewBag.Tipo == "Serviço")
    {
        <div class="col">
            <input class="form-control itemOrçamentoValue" data-val="true" data-val-required="Campo Requerido" @if (Model.Serviço.PreçoMin != null) { <text>min = "@PreçoMin"</text>} @if (Model.Serviço.PreçoMin != null) { <text>max="@PreçoMax"</text>}  data-val-number="Valor precisa ser um número." />
        </div>
        <input type="hidden" value="1" name="Tipo" class="itemOrçamentoTipo" />
    }
</div>