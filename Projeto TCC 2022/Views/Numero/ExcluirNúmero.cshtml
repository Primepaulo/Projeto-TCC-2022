@model Projeto_TCC_2022.Models.CelularTelefone

<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title fs-5">Excluir Número?</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body pt-0">
            <h5 class="smallHeader mt-4">Número</h5>
            <h4>@Model.CelularTelefone1</h4>

            @using (Html.BeginForm("Deletar", "Numero", FormMethod.Post))
            {
                @Html.HiddenFor(e => e.Id)

                <div class="text-center">
                    <button type="submit" class="btn btn-danger">Deletar</button>
                </div>
            }
        </div>
    </div>
</div>