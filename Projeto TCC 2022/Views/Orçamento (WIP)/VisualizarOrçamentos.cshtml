<div class="container mt-5" id="Orçamento">

</div>


<div class="container text-center mt-5">
    <a class="btn btn-secondary" href="@Url.Action("HistoricoOrçamentos")">Histórico de Orçamentos</a>
</div>

@section scripts{

    <script>
        $(document).ready(function () {


            if ("@ViewBag.éPessoa" == "True") {

                $.ajax
                ({
                    type: 'GET',
                    url: "/Orçamento/VisualizarOrçamentoPessoaPartial/?data=" + 1,
                    dataType: 'html',
                    cache: false,
                    success: function (data) {
                        $('#Orçamento').append(data);
                    }
                });
            }

            else if ("@ViewBag.éOficina" == "True") {

                $.ajax
                ({
                    type: 'GET',
                    url: "/Orçamento/VisualizarOrçamentoOficinaPartial/?data=" + 1,
                    dataType: 'html',
                    cache: false,
                    success: function (data) {
                        $('#Orçamento').append(data);
                    }
                });
            }

        });
    </script>
}