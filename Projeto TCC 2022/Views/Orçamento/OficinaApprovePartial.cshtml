@model Projeto_TCC_2022.Models.Classes.OficinaApprovePartial


@if (ViewBag.éOficina == true)
{
    <div class="card-body">
        @using (Html.BeginForm("AprovarRecusar", "Orçamento", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.Id)
            <div class="row mt-2">
                <div class="col-md-6 col-sm-12">
                    <button type="submit" class="btn btn-success" value="12" name="Operação">Aceitar Solicitação <i class="bi bi-check-lg"></i></button>
                </div>
                <div class="col-md-6 col-sm-12">
                    <button type="submit" class="btn btn-danger" value="11" name="Operação">Recusar Solicitação <i class="bi bi-x-lg" style="font-size: 14px"></i></button>
                </div>
            </div>
        }
    </div>
}

@if (ViewBag.éPessoa == true)
{
    <h4 class="bigHeader ">Aguardando Oficina...</h4>
}