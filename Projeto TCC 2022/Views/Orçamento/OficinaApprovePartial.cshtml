@model Projeto_TCC_2022.Models.Classes.OficinaApprovePartial


@if (ViewBag.éOficina == true)
{
    <div class="card-body">
        @using (Html.BeginForm("AprovarRecusar", "Orçamento", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.Id)
            <div class="row mt-2">
                <div class="col-md-6 col-sm-12">
                    <button type="submit" class="btn btn-default" value="12" name="Operação">Aceitar Solicitação <i class="bi bi-check-lg" style="color:green"></i></button>
                </div>
                <div class="col-md-6 col-sm-12">
                    <button type="submit" class="btn btn-default" value="11" name="Operação">Recusar Solicitação<i class="bi bi-x-lg" style="color:red; font-size: 13px"></i></button>
                </div>
            </div>
        }
    </div>
}

@if (ViewBag.éPessoa == true)
{
    <h4 class="bigHeader ">Aguardando Oficina...</h4>
}



<script>
    $('.timepicker').timepicker({
        timeFormat: 'HH:mm',
        dynamic: false,
        dropdown: false,
        scrollbar: false
    });
</script>