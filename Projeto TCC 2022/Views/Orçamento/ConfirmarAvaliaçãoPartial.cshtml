<div class="card-body">
    <h5 class="bigHeader">Aguardando avaliação do Veículo...</h5>

    @if (ViewBag.éOficina == true)
    {
        using (Html.BeginForm("ConfirmarAvaliação", "Orçamento", FormMethod.Post))
        {

            <input type="hidden" id="Id" name="Id" value="@ViewBag.Id" />
            <div class="row mt-3">
                <div class="col-md-6 col-sm-12">
                    <button type="submit" class="btn btn-success" value="22" name="Operação" id="Operação">Confirmar Avaliação</button>
                </div>
                <div class="col-md-6 col-sm-12">
                    <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#confirmationModal">Cliente Ausente</button>
                </div>
            </div>

            <div class="modal fade" id="confirmationModal" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5">Confirmar</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <h3>Essa ação é irreversível, você tem certeza?</h3>
                            <div class="text-center mx-auto mt-4">
                                <button type="submit" class="btn btn-danger" value="24" name="Operação" 
                                        id="Operação">Marcar como Ausente</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
