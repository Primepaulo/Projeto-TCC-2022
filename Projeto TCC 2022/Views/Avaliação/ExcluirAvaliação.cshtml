@model Projeto_TCC_2022.Models.ViewModels.ExcluirAvaliação


<h4 class="bigHeader">Deseja realmente deletar esta Avaliação?</h4>
<div>

    <h6 class="smallHeader mt-3">Oficina</h6>
    <h5 class="bigHeader">@Model.Oficina.Nome</h5>

    <h6 class="smallHeader mt-3">Média</h6>
    <h5 class="bigHeader">@Model.Avaliação.Estrelas</h5>

    <h6 class="smallHeader mt-3">Itens</h6>
    @for (int i = 0; i < Model.Serviços.Count; i++)
    {
        <div class="row w-50">
            <div class="col-md-4">
                <h5 class="bigHeader">@Model.Serviços[i].Nome</h5>
            </div>
            <div class="col-md-4">
                @switch (Model.Itens[i].Estrelas)
                {
                    case 0:
                        <text>
                            <i class="bi bi-star d-inline-block"></i>
                            <i class="bi bi-star d-inline-block"></i>
                            <i class="bi bi-star d-inline-block"></i>
                            <i class="bi bi-star d-inline-block"></i>
                            <i class="bi bi-star d-inline-block"></i>
                        </text>
                        break;
                    case 1:
                        <text>
                            <i class="bi bi-star-fill d-inline-block"></i>
                            <i class="bi bi-star d-inline-block"></i>
                            <i class="bi bi-star d-inline-block"></i>
                            <i class="bi bi-star d-inline-block"></i>
                            <i class="bi bi-star d-inline-block"></i>
                        </text>
                        break;
                    case 2:
                        <text>
                            <i class="bi bi-star-fill d-inline-block"></i>
                            <i class="bi bi-star-fill d-inline-block"></i>
                            <i class="bi bi-star d-inline-block"></i>
                            <i class="bi bi-star d-inline-block"></i>
                            <i class="bi bi-star d-inline-block"></i>
                        </text>
                        break;
                    case 3:
                        <text>
                            <i class="bi bi-star-fill d-inline-block"></i>
                            <i class="bi bi-star-fill d-inline-block"></i>
                            <i class="bi bi-star-fill d-inline-block"></i>
                            <i class="bi bi-star d-inline-block"></i>
                            <i class="bi bi-star d-inline-block"></i>
                        </text>
                        break;
                    case 4:
                        <text>
                            <i class="bi bi-star-fill d-inline-block"></i>
                            <i class="bi bi-star-fill d-inline-block"></i>
                            <i class="bi bi-star-fill d-inline-block"></i>
                            <i class="bi bi-star-fill d-inline-block"></i>
                            <i class="bi bi-star d-inline-block "></i>
                        </text>
                        break;
                    case 5:
                        <text>
                            <i class="bi bi-star-fill d-inline-block"></i>
                            <i class="bi bi-star-fill d-inline-block"></i>
                            <i class="bi bi-star-fill d-inline-block"></i>
                            <i class="bi bi-star-fill d-inline-block"></i>
                            <i class="bi bi-star-fill d-inline-block"></i>
                        </text>
                        break;
                }
            </div>
        </div>
    }

    <h5 class="smallHeader mt-3">Texto</h5>
    <p class="text">@Model.Avaliação.Texto</p>


    @using (Html.BeginForm("Excluir", "Avaliação", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" name="Id" value="@Model.Avaliação.Id" />

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger" />
            <div class="d-inline-block mx-2">|</div>
            <a class="btn" href="@Url.Action("HistoricoAvaliações", "Avaliação")">Retornar</a>
        </div>
    }
</div>
