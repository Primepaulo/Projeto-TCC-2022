@model Projeto_TCC_2022.Models.Classes.ServiçoAvaliaçãoOrçamento

@using (Html.BeginForm("AvaliarServiço", "Avaliação", FormMethod.Post))
{

    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.Hidden("serviçoId", Model.serviço.Id)
    @Html.Hidden("orçamentoId", Model.orçamento.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Avaliação.Estrelas, htmlAttributes: new { @class = "control-label col-md-2" })

        @*Ia colocar ícones, mas a tag option só suporta texto. Se desejar modificar, será necessária a criação de um select
            customizado ou talvez um pouco de tentativas com o selectize.js (que já está instalado).*@
        <div class="col-md-10">

            <h2>Avaliar:</h2>

            <input type="radio" id="1" name="Estrelas" value="1">
            <label for="1">
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star"></i>
                <i class="bi bi-star"></i>
                <i class="bi bi-star"></i>
                <i class="bi bi-star"></i>
            </label><br>

            <input type="radio" id="2" name="Estrelas" value="2">
            <label for="2">
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star"></i>
                <i class="bi bi-star"></i>
                <i class="bi bi-star"></i>
            </label><br>

            <input type="radio" id="3" name="Estrelas" value="3">
            <label for="3">
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star"></i>
                <i class="bi bi-star"></i>
            </label><br>

            <input type="radio" id="4" name="Estrelas" value="4">
            <label for="4">
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star"></i>
            </label><br>

            <input type="radio" id="5" name="Estrelas" value="5">
            <label for="5">
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
            </label><br>

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Avaliação.Texto, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextArea("Texto","", new { @class = "form-control", @rows = "4" })
            @Html.ValidationMessageFor(model => model.Avaliação.Texto, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Avaliar" class="btn btn-default" />
        </div>
    </div>
}