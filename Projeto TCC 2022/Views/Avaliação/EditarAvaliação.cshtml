@model Projeto_TCC_2022.Models.Avaliação

@{
    ViewBag.Title = "Editar Avaliação";
}

<h2>EditarAvaliação</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Avaliação</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Estrelas, htmlAttributes: new { @class = "control-label col-md-2" })

        @*Ia colocar ícones, mas a tag option só suporta texto. Se desejar modificar, será necessária a criação de um select
            customizado ou talvez um pouco de tentativas com o selectize.js (que já está instalado).*@
        <div class="col-md-10">

            <h2>Avaliar:</h2>

            @Html.RadioButtonFor(model => model.Estrelas, 1);
            <label for="1">
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star"></i>
                <i class="bi bi-star"></i>
                <i class="bi bi-star"></i>
                <i class="bi bi-star"></i>
            </label><br>

            @Html.RadioButtonFor(model => model.Estrelas, 2);
            <label for="2">
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star"></i>
                <i class="bi bi-star"></i>
                <i class="bi bi-star"></i>
            </label><br>

            @Html.RadioButtonFor(model => model.Estrelas, 3);
            <label for="3">
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star"></i>
                <i class="bi bi-star"></i>
            </label><br>

            @Html.RadioButtonFor(model => model.Estrelas, 4);
            <label for="4">
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star"></i>
            </label><br>

            @Html.RadioButtonFor(model => model.Estrelas, 5);
            <label for="5">
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
            </label><br>

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Texto, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Texto, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Texto, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.HiddenFor(model => model.fk_Serviços_Id)
    @Html.HiddenFor(model => model.fk_Pessoa_Id)
    @Html.HiddenFor(model => model.Fk_Orçamento_Id)

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

