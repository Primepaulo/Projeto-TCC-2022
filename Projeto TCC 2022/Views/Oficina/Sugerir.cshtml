@model Projeto_TCC_2022.Models.Messages

@{
    ViewBag.Title = "Sugerir";
}

<div class="d-flex justify-content-center align-content-center flex-wrap" style="height: 70vh">
    <section style="width: 400px">
        <h2 class="mb-4 text-center Montserrat">Sugira uma nova Categoria!</h2>
        @using (Html.BeginForm("SendMessage", "Oficina", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.LabelFor(model => model.Texto, htmlAttributes: new { @class = "form-label" })
            <textarea name="Texto" id="Texto" rows="3" class="form-control"></textarea>
            @Html.ValidationMessageFor(model => model.Texto, "", new { @class = "text-danger" })

            <div class="d-grid gap-2 col-12 pt-2 mt-4 text-center">
                <input type="submit" value="Enviar" class="btn btn-primary inputArea" />
            </div>
        }

        <div class="text-center mt-5">
            <a href="@Url.Action("Index", "Home")" class="Montserrat" style="color: black; text-decoration: none">Retornar</a>
        </div>

    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}