
<div class="container">
    @if (ViewBag.Imagem != null)
    {
        <img src="@ViewBag.Imagem.Url" alt="Imagem da Oficina" class="centerOficinaImage img-thumbnail img-responsive" width="150" height="50" />
    }
</div>

<h1 class="text-center">@ViewBag.Oficina.Nome</h1>

<h2>Serviços:</h2> @* Seria uma lista de serviço com uma anchor para os detalhes e suas peças *@

@if (ViewBag.Serviços != null)
{
    foreach (var item in ViewBag.Serviços)
    {
        <p>@item.Nome</p>
    }
}

<h2 class="mt-4">Fale Conosco:</h2>

@if (ViewBag.CelularTelefone != null)
{
    foreach (var item in ViewBag.CelularTelefone)
    {
        <p>@item.CelularTelefone1</p>
    }
    
}

<div class="container text-center">
    <div class="row">
        <div class="col">
            @if (ViewBag.Oficina.Id == ViewBag.userID)
            {
                <a href="@Url.Action("EditarOficina", "Oficina", new { Id = ViewBag.Oficina.Id })" class="mt-5">Editar Dados da Oficina</a>
            }
        </div>
        <div class="col">
            @if (ViewBag.Oficina.Id == ViewBag.userID)
            {
                <a href="@Url.Action("VisualizarServiços", "Serviços", new { Id = ViewBag.Oficina.Id })" class="mt-5">Serviços</a>
            }
        </div>
    </div>
</div>