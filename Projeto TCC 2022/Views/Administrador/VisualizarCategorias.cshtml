
@{
    ViewBag.Title = "Categorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-5">
    <div class="row">
        <div class="col text-center">
            <ul>
                @foreach (var item in ViewBag.Categorias)
                {
                <li>@item.Nome 
                    @Html.ActionLink("Editar", "UpdateCategoria", new { Id = item.Id }, new { @class = "" })
                    @Html.ActionLink("Excluir", "DeleteCategoria", new { Id = item.Id }, new { @class = "" })
                </li>

                }
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col text-center">
            @Html.ActionLink("Adicionar Categorias", "AdicionarCategorias", null, new { @class = "btn btn-success" })
        </div>
    </div>
</div>