@{
    ViewBag.Title = "Categorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header border-0">
        <h3 class="smallHeader">Categorias</h3>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th scope="col">Código</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Categorias)
                {
                    <tr class="text-center">
                        <td>@item.Id</td>
                        <td>@item.Nome</td>
                        <td>
                            <a class="edit btn btn-primary" data-id="@item.Id" href="#">Editar</a>
                            <a class="excluir btn btn-danger" data-id="@item.Id" href="#">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-center mt-4 mb-3">
            <a class="btn btn-primary btn-lg" href="#" id="add">Adicionar Categorias</a>
        </div>
    </div>
</div>

<div class="modal fade" id="Modal" tabindex="-1">
</div>

<div class="text-center mt-5 mb-5">
    <a href="/Administrador/Index/" style="text-decoration: none">Retornar</a>
</div>

@section scripts {

    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {

            $('#add').click(function () {

                $.ajax
                ({
                    type: 'GET',
                    url: '@Url.Action("AdicionarCategorias", "Administrador")',
                    dataType: 'html',
                    cache: false,
                    success: function (data) {
                        $('#Modal').html(data);
                        $('#Modal').modal("show");
                    },
                    error: function () {
                        console.log("Erro");
                    },
                    complete: function () {
                        $("form").each(function () { $.data($(this)[0], 'validator', false); });
                        $.validator.unobtrusive.parse("form");
                    }
                });

            });

            $('.edit').click(function () {

                var a = $(this).data("id");

                $.ajax
                ({
                    type: 'GET',
                    url: '@Url.Action("UpdateCategoria", "Administrador")/' + a,
                    dataType: 'html',
                    cache: false,
                    success: function (data) {
                        $('#Modal').html(data);
                        $('#Modal').modal("show");
                    },
                    error: function () {
                        console.log("Erro");
                    },
                    complete: function () {
                        $("form").each(function () { $.data($(this)[0], 'validator', false); });
                        $.validator.unobtrusive.parse("form");
                    }
                });
            });

            $('.excluir').click(function () {

                var a = $(this).data("id");

                $.ajax
                ({
                    type: 'GET',
                    url: '@Url.Action("DeleteCategoria", "Administrador")/' + a,
                    dataType: 'html',
                    cache: false,
                    success: function (data) {
                        $('#Modal').html(data);
                        $('#Modal').modal("show");
                    },
                    error: function () {
                        console.log("Erro");
                    }
                });
            });

        });
    </script>
}