@model Projeto_TCC_2022.Models.Categoria

@using (Html.BeginForm("AdicionarCategorias", "Administrador", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
        <div class="modal-header">
            <h4>Categoria</h4>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body pt-0">
            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <h5 class="smallHeader mt-4">Nome:</h5>
                <div class="mt-2">
                    @Html.EditorFor(e => e.Nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger mt-2" })
                </div>

                <div class="text-center">
                    <input type="submit" value="Create" class="btn btn-primary mt-4" />
                </div>

            </div>
        </div>
    </div>
</div>
}