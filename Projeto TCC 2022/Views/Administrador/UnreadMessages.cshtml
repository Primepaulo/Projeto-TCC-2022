
<h1 class="mt-5">Mensagens não lidas:</h1>

@if (ViewBag.Messages != null)
{
    <div class="container">
        @for (int i = 0; i < ViewBag.Messages.Count; i++)
        {
        <div class="row">
            <div class="col">@ViewBag.Oficinas[i].Nome</div>
            <div class="col">@ViewBag.Messages[i].Texto</div>
            <div class="col">@Html.ActionLink("Marcar como Lido", "Lido", new {Id = ViewBag.Messages[i].Id})</div>
        </div>
        }
    </div>
}

else { 
    <h2 class="text-center">Nenhuma mensagem não lida.</h2>
}

<a href="@Url.Action("Messages")" class="btn btn-success mt-3">Ver Mensagens Lidas</a>

<div class="mt-3">
    <a href="@Url.Action("Index")">Retornar</a>
</div>